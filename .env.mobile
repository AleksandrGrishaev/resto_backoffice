# .env.mobile
# Mobile environment - Capacitor приложение с offline-first для POS

# ===== ПРИЛОЖЕНИЕ =====
VITE_APP_TITLE=Kitchen App Mobile
VITE_API_URL=https://api.restaurant.com
VITE_ENABLE_LOGS=true

# ===== ПЛАТФОРМА И РЕЖИМ =====
VITE_PLATFORM=mobile
VITE_USE_API=true
VITE_ENABLE_OFFLINE=true
VITE_USE_MOCK_DATA=false

# ===== DEBUG НАСТРОЙКИ =====
VITE_DEBUG_ENABLED=true
VITE_DEBUG_STORES=true
VITE_DEBUG_ROUTING=false
VITE_DEBUG_PERSISTENCE=true

# ===== PERSISTENCE СЛОЙ (приоритет offline) =====
VITE_STORAGE_TYPE=capacitor
VITE_ENABLE_SYNC=true
VITE_STORAGE_PREFIX=kitchen-mobile

# ===== FIREBASE (синхронизация в фоне) =====
VITE_USE_FIREBASE=true
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_API_KEY=your-mobile-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-domain.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-mobile-app-id

# ===== POS SPECIFIC SETTINGS (оптимизировано для мобильных) =====
VITE_POS_OFFLINE_FIRST=true
VITE_POS_CACHE_TTL=1800
VITE_POS_AUTO_SYNC_INTERVAL=60000

# ===== MOBILE SPECIFIC =====
VITE_SHOW_DEV_TOOLS=true
VITE_MOCK_NETWORK_DELAY=0
VITE_ENABLE_HOT_RELOAD=false

# ===== CAPACITOR FEATURES =====
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_CAMERA=true
VITE_ENABLE_BIOMETRIC_AUTH=true
