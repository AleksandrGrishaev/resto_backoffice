# .env.example
# Template for environment variables - copy to .env.development or .env.production

# ===== ПРИЛОЖЕНИЕ =====
VITE_APP_TITLE=Kitchen App
VITE_API_URL=https://api.example.com
VITE_ENABLE_LOGS=true

# ===== ПЛАТФОРМА И РЕЖИМ =====
# Возможные значения: web, mobile
VITE_PLATFORM=web

# Использовать API или mock данные
VITE_USE_API=false

# Включить поддержку offline режима
VITE_ENABLE_OFFLINE=true

# Использовать mock данные для тестирования
VITE_USE_MOCK_DATA=true

# ===== DEBUG НАСТРОЙКИ =====
# Включить общий debug режим
VITE_DEBUG_ENABLED=true

# Debug для stores (Pinia)
VITE_DEBUG_STORES=true

# Debug для роутинга
VITE_DEBUG_ROUTING=false

# Debug для persistence слоя
VITE_DEBUG_PERSISTENCE=true

# ===== PERSISTENCE СЛОЙ =====
# Тип хранилища: localStorage, indexedDB, capacitor, api
VITE_STORAGE_TYPE=localStorage

# Включить синхронизацию с сервером
VITE_ENABLE_SYNC=false

# Префикс для ключей в localStorage
VITE_STORAGE_PREFIX=kitchen-app

# ===== FIREBASE CONFIGURATION =====
VITE_USE_FIREBASE=false
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-domain.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ===== POS SPECIFIC SETTINGS =====
# Использовать offline-first режим для POS
VITE_POS_OFFLINE_FIRST=true

# TTL для кэша POS данных (в секундах)
VITE_POS_CACHE_TTL=300

# Интервал автоматической синхронизации POS (в миллисекундах)
VITE_POS_AUTO_SYNC_INTERVAL=30000

# ===== DEVELOPMENT SETTINGS =====
# Показывать dev tools в продакшене (только для админов)
VITE_SHOW_DEV_TOOLS=false

# Искусственная задержка для имитации сети (в миллисекундах)
VITE_MOCK_NETWORK_DELAY=0

# Включить hot reload для Vite
VITE_ENABLE_HOT_RELOAD=true
